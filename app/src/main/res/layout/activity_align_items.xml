<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/stretch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="stretch  "
        android:textAllCaps="false" />

    <Button
        android:id="@+id/flex_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="flex_start"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/flex_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="flex_end "
        android:textAllCaps="false" />

    <Button
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="center "
        android:textAllCaps="false" />

    <Button
        android:id="@+id/baseline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="baseline "
        android:textAllCaps="false" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tx1"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="#BEEDC7"
            android:text="1" />

        <TextView
            android:id="@+id/tx2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#A0EEE1"
            android:gravity="center"
            android:text="2" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="50dp"
            android:layout_height="150dp"
            android:background="#19CAAD"
            android:gravity="center"
            android:padding="20dp"
            android:text="3" />


    </com.google.android.flexbox.FlexboxLayout>

</LinearLayout>